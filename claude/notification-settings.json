{
  "hooks" : {
    "Notification" : [
      {
        "hooks" : [
          {
            "command" : "terminal-notifier -title 'Claude Code' -message 'ℹ️ Needs attention' -activate com.mitchellh.ghostty",
            "type" : "command"
          }
        ],
        "matcher" : ""
      },
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ],
        "matcher" : "*"
      }
    ],
    "PermissionRequest" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "timeout" : 86400,
            "type" : "command"
          }
        ],
        "matcher" : "*"
      }
    ],
    "PostToolUse" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ],
        "matcher" : "*"
      }
    ],
    "PreCompact" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ],
        "matcher" : "auto"
      },
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ],
        "matcher" : "manual"
      }
    ],
    "PreToolUse" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ],
        "matcher" : "*"
      }
    ],
    "SessionEnd" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ]
      }
    ],
    "SessionStart" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ]
      }
    ],
    "Stop" : [
      {
        "hooks" : [
          {
            "command" : "terminal-notifier -title 'Claude Code' -message '✓ Done' -activate com.mitchellh.ghostty",
            "type" : "command"
          }
        ],
        "matcher" : ""
      },
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ]
      }
    ],
    "SubagentStop" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ]
      }
    ],
    "UserPromptSubmit" : [
      {
        "hooks" : [
          {
            "command" : "python3 ~\/.claude\/hooks\/claude-island-state.py",
            "type" : "command"
          }
        ]
      }
    ]
  }
}